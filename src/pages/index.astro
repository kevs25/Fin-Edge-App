---
import Layout from '../layouts/Layout.astro';
import Home from '../components/Home.astro';
import Services from '../components/Services.astro';
import About from '../components/About.astro';
import Contact from '../components/Contact.astro';
---

<Layout title="Welcome to Fin Edge.">
	<main>
		<div id="Home-section">
			<Home />
		</div>
		<div id="Services-section">
			<Services />
		</div>
		<div id="About-section">
			<About />
		</div>
		<div id="Contact-section">
			<Contact />
		</div>
	</main>
</Layout>

<style>
	
	#Home-section{
		/* margin-top: 40rem; */
		border: 0px solid black;
		padding: 3rem;
		
	}
	
	#Services-section{
		
		position: relative;
		top: 1rem;
		margin: 1rem 1rem 1rem 1rem;
		
		padding: 1rem;
		/* height: 55vh; */
	}
	#About-section{
		position: relative;
		top: 23rem;
		margin: 1rem 1rem 1rem 1rem;
	}
	#Contact-section {
		/* border: 1px solid red; */
		/* height: 70vh; */
		position: relative;
		top: 21rem;
		padding: 1rem 1rem 1rem 1rem;
		margin: 0rem 1rem 1rem 1rem;

	}

	@media (width < 900px){
		#About-section{
			top: 10rem;
		}
		#Contact-section{
			top: 7rem;
		}
	}

	@media (width < 600px){
		#Home-section{
			padding: 1.5rem;
		}
		#Services-section{
			top: -1rem;
		}
		#About-section{
			top: 4rem;
		}
		#Contact-section{
			top: 3rem;
		}
	}
	@media (width < 400px){
		#Services-section{
			top: -2rem;
		}
		#About-section{
			top: 0rem;
		}
		#Contact-section{
			top: -2rem;
			/* padding-bottom: 10rem; */
		}
	}
</style>
